# ~/.gitconfig

[user]
    name = Hoàng Đức Hiếu
    email = hdhoang@zahe.me
[color]
    ui = auto
[pack]
    threads = 0
[core]
    eol = lf
    whitespace = trailing-space,space-before-tab
[diff]
    renamelimit = 0
    renames = copies
    mnemonicprefix = true
[branch]
    autosetuprebase = always
[rebase]
    autosquash = true
[push]
    default = nothing

[alias]
    pr = pull --rebase
    ml = log --reverse --topo-order ORIG_HEAD..
    l = log -p --word-diff
    s = status -s
    ap = add -p
    c = commit -v
    d = diff --word-diff=porcelain
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --all
