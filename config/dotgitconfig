# ~/.gitconfig

[user]
    name = Hoàng Đức Hiếu
    email = hdhoang@zahe.me
[color]
    ui = auto
[core]
    eol = lf
    whitespace = trailing-space,space-before-tab

[alias]
    pr = pull --rebase
    ml = log --reverse --topo-order ORIG_HEAD..
    l = log -p --word-diff
    s = status -s
    ap = add -p
    c = commit -v
    d = diff --word-diff=porcelain
[push]
	default = simple
[pull]
	rebase = true
[rebase]
	stat = true
