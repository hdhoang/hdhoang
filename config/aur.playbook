#!/bin/ansible-playbook
# -*- mode: yaml -*-
- hosts: arch
  vars:
    store: /tmp/aur
  tasks:
    - file: state=directory path={{store}}
    - get_url: url=https://aur4.archlinux.org/cgit/aur.git/snapshot/{{name}}.tar.gz dest={{store}}/
    - unarchive: copy=no src={{store}}/{{name}}.tar.gz dest={{store}}
    - command: makepkg --noconfirm --install --force --syncdeps chdir={{store}}/{{name}}
