# -*- mode: sh; sh-shell: sh -*-

# local info
alias ls='ls --color=auto --file-type --group-directories-first'
alias df='df -hT --total -x tmpfs -x devtmpfs -x rootfs'
alias du='du -h --total'
alias dumx='dumx -h -xdev'
alias locate='locate -ie'
alias p='pgrep -f'
alias who='who -aH'
alias s=sensors
alias t='inotail -f'

# network info
alias dm='dig +search +noall +answer +multiline'
alias ds='dig +search +short'
alias dx='dig +search +short -x'
alias whois='gwhois'
alias nh='sudo nethogs br0'

# file ops
alias mkdir='mkdir -p'
alias cp='cp -r --reflink=auto --preserve=xattr'
alias ln='ln -i'
alias rmdir='rmdir -p'
alias rm='rm --interactive=once --one-file-system'
alias pr='perl-rename -i'
function prv(){ pr -v $@ | column -t -s '>' }
function xattr() {
	local label="$1"
	shift
	local value="$1"
	shift
	setfattr -n "user.$USER.$label" -v "$value" $*
}
alias nn='nice -n 19 ionice -c 3 '
alias rs='nn rsync --human-readable --verbose --progress --partial --archive --xattrs'
alias bu='rs --delete /mnt/cmaluz/@{s,g} ~/{Music,Pictures} ~h ~/Public/{openid,pic} ~/Public/mirror/book ~pool'

# system
alias pa='rlwrap pacmd'
alias sc='systemctl'
alias ssc='sudo systemctl --system'
alias po='cat ~/shutdown-todo.txt - && ssc'
alias psc='ps xawf -eo pid,user,cgroup,args'

alias mp='nn makepkg -isf'
alias i='sudo pacman'
alias cower='cower -fddt $ap'
ap=~/archlinux/
function aur {
    cd $ap
    cower $1
    cd $1
    mp
}

# fun
alias gd="export LIBGL_DRIVERS_PATH=/usr/lib/xorg/modules/dri_g/"
alias c="crawl-tiles&"
alias m='mplayer'

# utils
alias today='grep $(date --rfc-3339=date)'
alias x=parallel
alias e="emacsclient -n"
alias f='firefox'
function .g() {f http://google.com/search?q="$*" }
alias rcmd="wget -qO - http://www.commandlinefu.com/commands/random/plaintext"
alias bit="nice bitcoind"
