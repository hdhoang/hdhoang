#!/bin/bash

# utils
alias g='git'
alias gp='g pr && g ml'
alias mg='magit -e'
function day() {
    grep $(date --rfc-3339=date -d "${1:-0} days ago") ${*:2}
}
alias x=parallel
alias e="emacsclient -n"
alias f='firefox'
alias rcmd="wget -qO - http://www.commandlinefu.com/commands/random/plaintext"
alias getc='wget -ci ~/queue.txt -P $dl && truncate -s0 ~/queue.txt'
alias gete='e ~/queue.txt'
function getv() {
    cd ~/Videos/$1/
    if [[ "$2" == "-e" ]]; then
        e q.txt
    else
        youtube-dl -a q.txt -c -t -f 44
    fi
}
alias nn='chrt -i 0 ionice -c 3 '

# places
h=~/Public/hdhoang-misc
conf=$h/system-config/$(hostname)
t=~/t
dl=~/Downloads
g=/mnt/cenbaz/@g
pkg=/var/cache/pacman/pkg
el=/var/log/everything.log

fav=~/Public/fav
pool=/mnt/marbi

# local info
alias ls='ls --color=auto --file-type --group-directories-first'
alias df='df -hT --total -x tmpfs -x devtmpfs -x rootfs'
alias du='du -h --total'
alias dumx='dumx -h -xdev'
alias locate='locate -ie'
alias p='pgrep -f'
alias who='who -aH'
alias s='watch "cpufreq-info -fmc0; cpufreq-info -smc0; cpufreq-info -fmc1; cpufreq-info -smc1; grep current /sys/kernel/debug/dri/0/radeon_pm_info; sensors"'
alias fr='free -m'
alias t='tail -f'

# network info
alias whois='gwhois'
alias nh='sudo nethogs'
port_mapping=(
587 tcp 465 tcp # tor
25 tcp # exim
80 tcp 443 tcp # lighttpd
)
alias op='upnpc -r ${port_mapping[*]}'

# file ops
alias mkdir='mkdir -p'
alias cp='cp -r --reflink=auto --preserve=xattr'
alias ln='ln -i'
alias rmdir='rmdir -p'
alias rm='rm --interactive=once --one-file-system'
alias prv='perl-rename -iv'
function xattr() {
	setfattr -n "user.$USER.$1" -v "$2" "${@:3}"
}
function com() {
    prv 's/rar$/cbr/;s/zip$/cbz/' {$dl,/mnt/cenbaz/@d}/*
    mv {$dl,/mnt/cenbaz/@d}/*cb? ~/Public/mirror/
}
alias rs='nn rsync --human-readable --verbose --progress --partial --archive --xattrs'
alias bu='rs --delete /mnt/cenbaz/@{s,g} ~/{queue.txt,queuev.txt,Music,Pictures,Videos,s} $h ~/Public/{openid,pic} ~/Public/mirror/{book,systemd-arch-units} $pool'

# system
alias ssc='sudo systemctl --system'
alias usc='systemctl --user'
alias po='cat ~/shutdown-todo.txt - && ssc'
alias psc='ps xawf -eo pid,user,cgroup,args'
function sls() {
    x -X systemd-cgls systemd:/system/{}.service ::: $*
}

alias mp='nn makepkg -isf'
alias i='sudo pacman'
alias pc='pacman -Qdt && i -R $(pacman -Qdtq)'
alias cower='cower -fddt $ap'
ap=~/archlinux
function aur {
    cd $ap
    cower $1 || curl https://aur.archlinux.org/packages/$1/$1.tar.gz | tar zxv
    cd $1
    mp ${*:2}
}

# fun
alias c="crawl-tiles&"
alias m='mplayer'
alias mi=mediainfo
alias ti=gtorrentviewer
alias rb='wget -N http://build.rockbox.org/data/rockbox-ipodnano1g.zip -P ~/Public/mirror && 7z -y -o/mnt/roxer x ~/Public/mirror/rockbox-ipodnano1g.zip'
alias dum='dumx -v ~/Music -type d|cut -c 9-|x -kX ls -1'
alias favd='ls -1 $fav/Music |awk "{FS=\"_\\\[\"; print \$1}" | uniq -di'
alias fava='ls -1 $fav/Music | cut -d @ -f 1 | uniq -c | sort -n'
alias favl='ls -1 $fav/Music |awk "{FS=\"\\\[|\\\]\"; print \$2}" | sort | uniq -c | sort -n'
alias favs='xattr fav fav $fav/**/*; rs --delete $fav $pool'
alias favf='rm /mnt/roxer/m/*; ls -1 $fav/Music/ | shuf -n 200 | rs --files-from=- --no-xattrs $fav/Music /mnt/roxer/m/'
function favm() {
    # not using alias to keep emacs hili sane
    cd $fav/Music/
    prv "s/- /__/g;s/ /_/g;s/''/_/g;s/_\[Unknown_Album\]//;s/\[unknown\]/(unknown)/;s/\[dialogue\]/(dialogue)/;s/_]./]./" *
}
